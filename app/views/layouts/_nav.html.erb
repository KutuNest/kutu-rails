<form class="form-inline float-right">
  <%- if member_signed_in? %>
    <div class="dropdown header hidden-sm-down">
      <button class="btn btn-default-clear font-bold btn-font-sm dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-user"></i> Accounts
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <%- for a in current_member.accounts do %>
        <button class="dropdown-item" type="button"><i class="fa fa-chevron-right"></i>&nbsp; <%= a.name %></button>
        <%- end %>
        <button class="dropdown-item" type="button"><i class="fa fa-plus"></i>&nbsp; Add Account</button>
        <%- unless current_member.regular_member? %>
        <button class="dropdown-item" type="button"><i class="fa fa-exchange"></i>&nbsp; Transactions</button>
        <!--
        <button class="dropdown-item" type="button"><i class="fa fa-retweet"></i>&nbsp; Pools</button>
        -->
        <button class="dropdown-item" type="button"><i class="fa fa-users"></i>&nbsp; Members</button>
          <%- if current_member.super_admin? %>
          <button class="dropdown-item" type="button"><i class="fa fa-clone"></i>&nbsp; Groupements</button>
          <%- end %>
        <%- end %>
        <button class="dropdown-item" type="button"><i class="fa fa-gear"></i>&nbsp; Settings</button>
      </div>
    </div>
    <a href="<%= destroy_member_session_path %>" class="btn btn-default-clear font-bold btn-font-sm"><i class="fa fa-key"></i> Logout</a>
  <%- else %>
    <a href="<%= new_member_session_path %>" class="btn btn-default-clear font-bold btn-font-sm"><i class="fa fa-key"></i> Login</a>
    <a href="<%= new_member_registration_path %>" class="btn btn-default-clear font-bold btn-font-sm"><i class="fa fa-user"></i> Sign up</a>
  <%- end %>  
</form>   