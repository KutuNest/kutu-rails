<div class="container padding-top-90">
  <div class="row">
    <div class="col-md-12">
        <%= render 'layouts/notice' %>
        <h2 class="color-secondary font-bold">Add Pool</h2>
        
        <%= form_for(@pool, url: save_pool_path) do |f| %>
          <%= render 'pool/form', f: f %>

          <div class="actions">
            <%= f.submit "Add Pool", class: 'btn btn-primary' %>
          </div>

        <% end %>
        <br/>
    </div>
  </div>
  <hr/>
</div>

<%- page_title 'Add Pool' %>