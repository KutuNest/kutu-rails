<div class="container padding-top-90">
  <div class="row">
    <div class="col-md-12">
        <%= render 'layouts/notice' %>
        <h2 class="color-secondary font-bold">Edit Pool</h2>
        
        <%= form_for(@pool, url: update_pool_path, method: :post) do |f| %>
          <%= render 'pool/form', f: f %>

          <div class="actions">
            <%= f.submit "Edit Pool", class: 'btn btn-primary' %>
          </div>

        <% end %>
        <br/>
    </div>
  </div>
  <hr/>
</div>

<%- page_title 'Edit Pool' %>