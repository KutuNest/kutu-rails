    <section class="content-section dashboard-public margin-top-50">
      <div class="container paddingBottom-10">
        <div class="row flex cards marginTop-10">
            <div class="col-xs-12 col-md-6 col-lg-3">
              <div class="row flex tiles-container tiles-border h-full">
                <div class="col-md-4 col-xs-5 no-padding h-full">
                  <div class="tiles green h-full content-center">
                    <i class="fa fa-chevron-circle-down"></i>
                  </div>
                </div>
                <div class="col-md-8 col-xs-7 tiles white p-10 text-center">
                  <h3 class="text-uppercase text-bold"><%= number_to_currency(current_member.summary[:money_received]) %></h3>
                  <small class="text-uppercase">Total Money</small><br/>
                  <small class="text-uppercase">Received</small>
                </div>
              </div>
            </div>
            
            <div class="col-xs-12 col-md-6 col-lg-3">
              <div class="row flex tiles-container tiles-border h-full">
                <div class="col-md-4 col-xs-5 no-padding h-full">
                  <div class="tiles green h-full content-center">
                    <i class="fa fa-chevron-circle-up"></i>
                  </div>
                </div>
                <div class="col-md-8 col-xs-7 tiles white p-10 text-center">
                  <h3 class="text-uppercase text-bold">
                    <%= number_to_currency(current_member.summary[:money_sent]) %>
                  </h3>
                  <small class="text-uppercase">Total Money</small><br/>
                  <small class="text-uppercase">Sent</small>
                </div>
              </div>
            </div>
            
            <div class="col-xs-12 col-md-6 col-lg-3">
              <div class="row flex tiles-container tiles-border h-full">
                <div class="col-md-4 col-xs-5 no-padding h-full">
                  <div class="tiles green h-full content-center">
                    <i class="fa fa-exchange"></i>
                  </div>
                </div>
                <div class="col-md-8 col-xs-7 tiles white p-10 text-center">
                  <h3 class="text-uppercase text-bold">
                    <%= current_member.summary[:total_transaction] %>
                    <small>&nbsp; TRX's</small>
                  </h3>
                  <small class="text-uppercase"><%= current_member.summary[:pending_transaction] %> PENDING</small><br/>
                  <small class="text-uppercase"><%= current_member.summary[:failed_transaction] %> FAILED</small>
                </div>
              </div>
            </div>
            
            <div class="col-xs-12 col-md-6 col-lg-3">
              <div class="row flex tiles-container tiles-border h-full">
                <div class="col-md-4 col-xs-5 no-padding h-full">
                  <div class="tiles green h-full content-center">
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div class="col-md-8 col-xs-7 tiles white p-10 text-center">
                  <h3 class="text-uppercase text-bold">
                    <%= current_member.summary[:total_accounts] %>
                    <small>&nbsp; Accounts</small>
                  </h3>
                  <small class="text-uppercase"><%= current_member.summary[:active_accounts] %> ACTIVE</small><br/>
                  <small class="text-uppercase"><%= current_member.summary[:inactive_accounts] %> INACTIVE</small>
                </div>
              </div>
            </div>

        </div>
      </div>

      <div class="container paddingTop-20 paddingBottom-10">
        <div class="row no-gutters marginTop-10">


          <div class="col-md-12 m-b-10">
            <div class="widget-item ">
              <div class="controller overlay right">
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>
              </div>
              <div class="tiles" style="border: 2px solid #F15152;background-color:#fff">
                <div class="tiles-body">
                  <h3 class="text-black"> <span class="semi-bold"><%= distance_of_time_in_words(DateTime.now, (DateTime.now + @current_transaction.timeout.seconds)) %> </span> to send <span class="semi-bold"><%= number_to_currency @current_transaction.value %></span> </h3>
                  <div class="overlayer bottom-right fullwidth">
                    <div class="overlayer-wrapper">
                      <div class=" p-l-20 p-r-20 p-b-20 p-t-20">
                        <div class="pull-right"> 
                          <a href="<%= transaction_path(@current_transaction) %>" class="btn btn-default"> 
                            <i class="fa fa-search-plus "></i>
                            show detail 
                          </a>
                          <span class="text-black">&nbsp; or &nbsp;</span>
                          <a href="<%= send_money_path(@current_transaction) %>" class="btn text-uppercase btn-primary btn-lg"> 
                            send money now 
                            <i class="fa fa-chevron-circle-right "></i>
                          </a> 
                        </div>
                        <div class="clearfix"></div>
                      </div>
                    </div>
                  </div>
                  <br>
                </div>
              </div>
              <div class="tiles white border-envelope">
                <div class="tiles-body">
                  <div class="row">

                    <div class="width-30pct">
                      <div class="preview-wrapper font-12 padding-top-5">Transaction timeout at</div>
                      <p class="text-black">
                        <i class="fa fa-clock-o m-r-3"></i>
                        <span><%= (@current_transaction.created_at + @current_transaction.timeout.seconds).to_s(:short) %></span> <br/>
                        
                      </p>
                    </div>

                    <div class="width-30pct">
                      <div class="preview-wrapper font-12 padding-top-5">Transfer to</div>
                      <p class="text-black">
                        <i class="fa fa-bank m-r-3"></i>
                        <span><%= @current_transaction.eater.member.bank.title %></span> <br/>
                        <%= @current_transaction.eater.member.account_number %> <br/>
                        <%= @current_transaction.eater.member.account_holder_name %>
                      </p>
                    </div>

                    <div class="width-30pct">
                      <div class="preview-wrapper font-12 padding-top-5">Contact to</div>
                      <p class="text-black">
                        <i class="fa fa-phone m-r-3"></i>
                        <span><%= @current_transaction.eater.member.phone_number %></span> <br/>
                      </p>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>


          <div class="col-12">
            <dl class="accordion">
              <dt href="#accordion2" aria-expanded="true" aria-controls="accordion2" class="dark-grey js-accordionTrigger">
                <span class="icon-square  text-white">
                  <i class="fa fa-check"></i>
                </span>
                  <a href="" class="is-expanded text-white">COMPLETED TRANSACTIONS</a>
              </dt>
              <dd class="accordion-content accordionItem is-expanded" id="accordion2" aria-hidden="false">
                <div class="row no-gutters">
                  <div class="col-12 col-lg-12">
                    <div class="table-responsive">
                      <table class="table table-hover table-dash ">
                        <thead class="">
                          <tr>
                            <th class="text-black">Completed Date</th>
                            <th class="text-black">Name</th>
                            <th class="text-black">Bank Account</th>
                            <th class="text-black">Account Name</th>
                            <th class="text-black">Amount</th>
                            <th class="text-black">Phone Number</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <%- for t in @transaction_history do %>
                          <tr>
                            <td><%= t.completed_date ||= "N/A" %></td>
                            <td><%= t.eater.member.full_name %></td>
                            <td><%= t.eater.member.bank.try(:title).to_s + " " + t.eater.member.account_number.to_s %></td>
                            <td><%= t.eater.member.account_holder_name %></td>
                            <td><label class="label label-success"><%= number_to_currency t.value %></label></td>
                            <td><%= t.eater.member.phone_number %></td>
                            <td><a class="btn btn-default btn-sm" href="<%= transaction_path(t) %>"><i class="fa fa-search-plus "></i> show</a></td>
                          </tr>
                          <%- end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </section>