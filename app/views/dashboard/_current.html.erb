          <%- counter_part = @current_transaction.eater.member == current_member ? @current_transaction.feeder : @current_transaction.eater %>

          <div class="col-md-12 m-b-10">
            <div class="widget-item ">
              <div class="tiles current-trx-wrapper">
                <%= render 'dashboard/receiver', counter_part: counter_part %>
              </div>
              <div class="tiles white border-envelope">
                <div class="tiles-body">
                  <div class="row">

                    <div class="width-30pct">
                      <div class="preview-wrapper font-12 padding-top-5">Transaction timeout at</div>
                      <p class="text-black">
                        <i class="fa fa-clock-o m-r-3"></i>
                        <span>
                          <%= (@current_transaction.created_at + @current_transaction.timeout.seconds).to_s(:short) %>
                        </span> 
                        <br/>
                      </p>
                    </div>

                    <div class="width-30pct current-divider">
                      <div class="preview-wrapper font-12 padding-top-5">Transfer to</div>
                      <p class="text-black">
                        <i class="fa fa-bank m-r-3"></i>
                        <span>
                          <%= counter_part.member.bank.title %>
                        </span> <br/>
                        <%= counter_part.member.account_number %> <br/>
                        <%= counter_part.member.account_holder_name %>
                      </p>
                    </div>

                    <div class="width-30pct current-divider">
                      <div class="preview-wrapper font-12 padding-top-5">Contact to</div>
                      <p class="text-black">
                        <i class="fa fa-phone m-r-3"></i>
                        <span><%= counter_part.member.phone_number %></span> <br/>
                      </p>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>