    <section class="content-section dashboard margin-top-50">
      <br/><br/>
      <div class="container p-0">
        <div class="row">
          <div class="card col-12 col-sm-8 offset-sm-2">
            <div class="card-panel bg-white  text-grey box-shadow p-0">
              <button type="button" class="btn btn-link btn-sm text-grey padding-left-0"><i class="fa fa-chevron-left"></i></button>
              <a class="text-black" href="<%= transaction_path(@transaction) %>">Transaction detail</a>
            </div>
          </div>
        </div>
      </div>

      <div class="container p-0">
        <div class="row">
          <div class="card col-12 col-sm-8 offset-sm-2">
            <%= render 'layouts/notice' %>
            <h2 class="color-secondary font-bold">Send Money</h2>

            <%= form_tag upload_receipt_path(@transaction.id), multipart: true do %>

              <div class="field">
                <%= label_tag :transfer_receipt %><br />
                <%= file_field_tag :receipt, autofocus: true %><br/>
              </div>

              <div class="actions">
                <%= submit_tag "Confirm transfer", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>

<%- page_title 'Send Money' %>