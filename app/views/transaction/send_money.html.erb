    <section class="content-section dashboard margin-top-50">
      <br/><br/>
      <div class="container p-0">
        <div class="row">
          <div class="card col-12 col-sm-8 offset-sm-2">
            <div class="card-panel bg-white  text-grey box-shadow p-0">
              <button type="button" class="btn btn-link btn-sm text-grey padding-left-0"><i class="fa fa-chevron-left"></i></button>
              <a class="text-black" href="<%= transaction_path(@transaction) %>">Transaction detail</a>
            </div>
          </div>
        </div>
      </div>

      <div class="container p-0">
        <div class="row">
          <div class="card col-12 col-sm-8 offset-sm-2">
            <%= render 'layouts/notice' %>
            <h2 class="color-secondary font-bold">Send Money</h2>

            <div class="row">
              <div class="col-12">
                <ul class="details list-group">
                  <li class="list-group-item">
                    <div class="container-fluid no-gutters padding-0">
                      <div class="row no-gutters">
                      <div class="col-5">Amount</div>
                      <div class="col-7"><label class="details-text"><%= number_to_currency @transaction.value %> </label></div>
                      </div>
                    </div>
                  </li>                
                  <li class="list-group-item">
                    <div class="container-fluid no-gutters padding-0">
                      <div class="row no-gutters">
                      <div class="col-5">Account Name</div>
                      <div class="col-7"><label class="details-text"><%= @transaction.eater.member.try(:account_holder_name) %> </label></div>
                      </div>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="container-fluid no-gutters padding-0">
                      <div class="row no-gutters">
                      <div class="col-5">Bank Name</div>
                      <div class="col-7 text-uppercase"><label class="details-text"><%= @transaction.eater.member.bank.title %></label></div>
                      </div>
                    </div>
                  </li>
                  <li class="list-group-item">
                    <div class="container-fluid no-gutters padding-0">
                      <div class="row no-gutters">
                      <div class="col-5">Account Number</div>
                      <div class="col-7 text-uppercase"><label class="details-text"><%= @transaction.eater.member.account_number %></label></div>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>

            <%= form_tag upload_receipt_path(@transaction.id), multipart: true do %>
            <div class="row">
              <div class="col-12 text-center">
                <div class="field text-center">
                  <br/><br/>
                  <%= label_tag :transfer_receipt, 'Confirm your transaction by uploading transfer receipt', class: 'text-bold' %>
                  <%= file_field_tag :receipt, class: 'text-center width-100pct' %><br/>
                </div>

                <div class="actions">
                  <%= submit_tag "Upload and confirm", class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>

<%- page_title 'Send Money' %>